<div class="d-flex flex-column justify-content-between align-items-between px-5">
  <div class="row my-5 px-5">
    <div class="col-8">
      <div class="row">
        <div class="col d-flex align-items-center">
          <h2 class="mx-5"><%= @group.name %></h2>
          <%= image_tag(@group.icon, alt: "Icon pic", height: "120 px") %>
        </div>
        
      </div>
      
    </div>
    <div class="col-4 d-flex align-items-center">
      <h3>Total = $<%= @total %></h3>
    </div>
  </div>

  <div>
    <% @items.each do |item| %>
      <div class="card mb-2">
        <div class="card-body">
          <div class="row">
            <div class="col-8">
              <%= item.name %>
            </div>
            <div class="col-4">
              $<%= item.amount %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <div class="d-flex flex-column justify-content-between align-items-between">
    <%= link_to "Add new item", new_group_item_path(@group), class: "btn btn-success" %> <br>
    <%= link_to "Back", groups_path, class: "btn btn-secondary" %>
  </div>
</div>